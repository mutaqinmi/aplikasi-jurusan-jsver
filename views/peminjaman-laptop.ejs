<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="iE=chrome">
        <link rel="stylesheet" href="/style/peminjaman-laptop.css">
        <link rel="stylesheet" type="text/css" href="https://unpkg.com/@phosphor-icons/web@2.0.3/src/regular/style.css"/>
        <script src="/script/jquery.js"></script>
        <script src="/script/animation.js"></script>
        <script src="/script/peminjaman-laptop.js"></script>
        <title>Peminjaman Laptop</title>
    </head>
    <body>
        <div class="container">
            <nav class="navbar">
                <i class="ph ph-caret-left"></i>
                <a href="/">Peminjaman Laptop</a>
            </nav>
            <div class="image">
                <div class="cover-image"></div>
            </div>
            <div class="form" id="form">
                <form class="form-peminjaman" method="POST" enctype="multipart/form-data">
                    <div class="input-container input-nis">
                        <label for="nis">Nama <span class="red-dot">*</span></label>
                        <datalist id="nis">
                            <% for(let i = 0; i <= (dataSiswa.length - 1); i++){ %>
                                <option value="<%= dataSiswa[i].nis %>"><%= dataSiswa[i].nama %></option>
                            <% } %>
                        </datalist>
                        <input autocomplete="on" list="nis" name="nis" id="nis" placeholder="Nama Siswa" required>
                    </div>
                    <div class="input-container input-laptop">
                        <label for="nomorLaptop">Nomor Laptop <span class="red-dot">*</span></label>
                        <datalist id="nomorLaptop">
                            <% for(let i = 0; i <= (dataLaptop.length - 1); i++){ %>
                                <option value="<%= dataLaptop[i].nomor_laptop %>"><%= dataLaptop[i].nomor_laptop %></option>
                            <% } %>
                        </datalist>
                        <input autocomplete="on" list="nomorLaptop" name="nomorLaptop" id="nomorLaptop" placeholder="Nomor Laptop" required>
                    </div>
                    <div class="input-container input-kelengkapan">
                        <label for="kelengkapan">Kelengkapan <span class="red-dot">*</span></label>
                        <div class="checkbox-kelengkapan">
                            <div class="tas">
                                <input type="checkbox" name="tas" id="tas">
                                <label class="checkbox-title" for="tas">Tas</label>
                            </div>
                            <div class="mouse">
                                <input type="checkbox" name="mouse" id="mouse">
                                <label class="checkbox-title" for="mouse">Mouse</label>
                            </div>
                            <div class="charger">
                                <input type="checkbox" name="charger" id="charger">
                                <label class="checkbox-title" for="charger">Charger</label>
                            </div>
                        </div>
                    </div>
                    <div class="foto-kondisi">
                        <img src="" id="result-image">
                        <label class="addfile" for="camera">
                            <i class="ph ph-camera"></i>
                        </label>
                        <input type="file" accept="image/jpeg" id="camera" name="camera" capture="environment" onchange="show(event)">
                    </div>
                    <div class="submit"></div>
                </form>
            </div>
        </div>
    </body>
</html>